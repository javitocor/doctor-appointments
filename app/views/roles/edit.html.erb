<section class="intro">
  <div class="mask d-flex align-items-center h-100" style="background-color: #D6D6D6;">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-6 col-xl-5">
          <div class="card" style="border-radius: 1rem;">
            <div class="card-body py-0 px-5 text-center">

              <div class="my-md-3 pb-2">

                <h1 class="fw-bold mb-0">Edit Role</h1>

                <i class="fas fa-user-md fa-2x my-2"></i>
                <%= render 'form', role: @role %>
              </div>

              <div class="py-4">
                <p class="mb-0"><%= link_to 'Show', @role, class:"btn btn-primary btn-lg btn-rounded text-white px-5 mb-2" %></p>
                <p class="mb-0"><%= link_to 'Back', roles_path, class:"btn btn-primary btn-lg btn-rounded text-white px-5" %></p>
              </div>

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
