<div class="container mt-3">
  <h1>Roles</h1>

  <table class="table table-hover">
    <thead>
      <tr>
        <th scope="col">Name</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @roles.each do |role| %>
        <tr>
          <td><%= role.name %></td>
          <td><%= link_to 'Show', role, class:"btn btn-primary btn-lg text-white" %></td>
          <td><%= link_to 'Edit', edit_role_path(role), class:"btn btn-primary btn-lg text-white" %></td>
          <td><%= link_to 'Delete', role, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-primary btn-lg text-white" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Role', new_role_path, class:"btn btn-primary btn-lg text-white" %>
</div>
