
<h1>Appointments</h1>

<table>
  <thead>
    <tr>
    <% if current_user.admin? || current_user.doctor? %>
      <th>Patient</th>
    <% end %>
      <th>Subject</th>
      <th>Starts at</th>
      <th>Ends at</th>
      <th>Doctor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @appointments.each do |appointment| %>
      <tr>
      <% if current_user.admin? || current_user.doctor? %>
        <td><%= appointment.patient_user.name %></td>
      <% end %>
        <td><%= appointment.subject %></td>
        <td><%= appointment.start_at %></td>
        <td><%= appointment.end_at %></td>
        <td><%= appointment.doctor_user.name %></td>
        <td><%= link_to 'Show', appointment %></td>
        <td><%= link_to 'Edit', edit_appointment_path(appointment) %></td>
        <td><%= link_to 'Cancel', appointment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if can? :create, Appointment %>
  <%= link_to 'New Appointment', new_appointment_path %>
<% end %>
