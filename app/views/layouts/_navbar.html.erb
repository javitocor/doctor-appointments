<header class="w-100 p-0 w-0">
  <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <a class="navbar-brand" href="#">
      <img src="" width="30" height="30" class="d-inline-block align-top" alt="">
      Crisalix
    </a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <% if user_signed_in? %>
          <%= link_to current_user.name, edit_user_registration_path, class:"nav-item nav-link" %>
          <%= link_to "Appointments", appointments_path, class:"nav-item nav-link" %>
          <% if current_user.doctor? %>
            <%= link_to "Patients", users_path, class:"nav-item nav-link" %>
          <% elsif current_user.patient? %>
            <%= link_to "Doctors", users_path, class:"nav-item nav-link" %>
          <% elsif current_user.admin? %>
            <%= link_to "Users", users_path, class:"nav-item nav-link" %>
            <%= link_to "Roles", roles_path, class:"nav-item nav-link" %>
          <% end %>
          <%= link_to "Sign out", destroy_user_session_path, method: :delete, class:"nav-item nav-link" %>
        <% else %>
          <%= link_to "Sign up", new_user_registration_path, class:"nav-item nav-link" %>
          <%= link_to "Sign in", new_user_session_path, class:"nav-item nav-link" %>
        <% end %>
      </div>
    </div>
  </nav>
</header>
